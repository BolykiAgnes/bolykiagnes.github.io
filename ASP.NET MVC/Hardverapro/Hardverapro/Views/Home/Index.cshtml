@model IEnumerable<Hardverapro.Models.Advertisement>
@{
    ViewData["Title"] = "Home Page";
    Random rnd = new Random();
    Advertisement[] ads = Model?.ToArray();
   
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (ads.Length > 0)
        {
            <div class="carousel-item active">
                <img src="@Url.Action("GetPictureData", "Home", new { uid = ads[rnd.Next(ads.Length)].UID })" width="128" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Action("GetPictureData", "Home", new { uid = ads[rnd.Next(ads.Length)].UID })" width="128" class="d-block w-100" />
            </div>
            <div class="carousel-item">
                <img src="@Url.Action("GetPictureData", "Home", new { uid = ads[rnd.Next(ads.Length)].UID })" width="128" class="d-block w-100" />
            </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</br>
<div style="text-align: center">
    <a class="btn btn-primary btn-lg btn-block" style="background-color:darksalmon" href="/Home/ListAds">Start Shopping</a>
</div>
