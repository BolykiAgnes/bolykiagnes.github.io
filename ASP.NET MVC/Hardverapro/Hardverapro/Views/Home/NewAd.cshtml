@model Hardverapro.Models.Advertisement

@{
    ViewData["Title"] = "NewAd";
    List<string> shipMethods = ((string[])ViewData["shipMethods"]).ToList();
}

<h4>Advertisement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewAd" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control-file">
                <label asp-for="PictureFormData" class="control-label"></label>
                <input type="file" asp-for="PictureFormData" class="form-control-file" />
                <span asp-validation-for="PictureFormData" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipMethod" class="control-label"></label>
                <select asp-for="ShipMethod" asp-items="@new SelectList(shipMethods)" class="custom-select"></select>
                <span asp-validation-for="ShipMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" placeholder="@ViewData["email"]" disabled class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-outline-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListAds" class="btn btn-warning">See others' ads</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
